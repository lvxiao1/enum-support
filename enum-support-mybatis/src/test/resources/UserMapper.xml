<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.lvxiao.enums.mybatis.UserMapper">

    <resultMap id="baseMap" type="org.lvxiao.enums.mybatis.User">
        <id column="id" property="id"/>
        <result property="sex" column="sex"/>
    </resultMap>


    <select id="selectAll" resultMap="baseMap">
        select *
        from `user`;
    </select>

    <select id="selectId" resultMap="baseMap">
        select *
        from `user`
        where `id` = #{id};
    </select>

    <select id="selectId2" resultMap="baseMap">
        select *
        from `user2`
        where `id` = #{id};
    </select>

    <select id="selectId3" resultMap="baseMap">
        select *
        from `user3`
        where `id` = #{id};
    </select>

    <select id="selectId4" resultMap="baseMap">
        select *
        from `user4`
        where `id` = #{id};
    </select>

    <select id="selectBySex" resultMap="baseMap">
        select *
        from `user`
        where `sex` = #{sex};
    </select>


</mapper>